              %a{href: "/calendar"} Events
            %li
              %a{href: "/galleries"} Photos
            %li
              %a{href: "/team"} Team
            %li
              %a{href: "/HoF"} Hall of Fame
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li= link_to 'Editer le profil', edit_user_registration_path
              %li |
              %li= link_to "Se deconnecter", destroy_user_session_path, method: :delete
            - else
              %li= link_to "Se connecter", new_user_session_path
    .container
      - if notice
        %div.alert.alert-success.alert-dismissable= notice
      - if alert
        %div.alert.alert-danger.alert-dismissable= alert
