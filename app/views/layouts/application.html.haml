%html
  %head
    %title BDSRailsCal
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .jumbotron
      .row
        .col-md-8
          %br
          %br
          %br
          %br
          %h2.jum BDS de l'ENSIIE Strasbourg
        .col-md-4
          %img.logo.media-object{alt: "", src: "/images/BDS.png"}
    .navbar-default{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} Accueil
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              =link_to "Actualit√©s", '/posts'
            %li
              %a{href: "/calendar"} Events
            %li
              %a{href: "/galleries"} Photos
            %li
              %a{href: "/team"} Team
            %li
              %a{href: "/HoF"} Hall of Fame
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li= link_to 'Edit profile', edit_user_registration_path
              %li |
              %li= link_to "Logout", destroy_user_session_path, method: :delete
            - else
              %li= link_to "Sign up", new_user_registration_path
              %li |
              %li= link_to "Login", new_user_session_path
    .container
      - if notice
        %div.alert.alert-success.alert-dismissable= notice
      - if alert
        %div.alert.alert-danger.alert-dismissable= alert
    .container
      %br
      = yield
    .footer
      .col-md-1
      .col-md-11
        .row
          .col-md-3
