%h1 Administration
#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapseOne"}
          Actualités
    #collapseOne.panel-collapse.collapse.in
      .panel-body
        %table.table.table-hover
          %thead
            %tr
              %th Id
              %th Titre
              %th Actions
          %tbody
            - @posts.each do |post|
              %tr
                %td= post.id
                %td= post.title
                %td
                  %a.btn.btn-default{href: "/posts/#{post.id}"}
                    %i.glyphicon.glyphicon-eye-open
                    Voir
                  %a.btn.btn-default{href: "/posts/#{post.id}/edit"}
                    %i.glyphicon.glyphicon-edit
                    Editer
                  %a.btn.btn-default{href: "/posts/#{post.id}", "data-method"=>"delete"}
                    %i.glyphicon.glyphicon-remove
                    Supprimer
        %a.btn.btn-default.btn-lg{href: "/posts/new"}
          %i.glyphicon.glyphicon-file
          Nouvelle Actualité
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapseTwo"}
          Galleries
