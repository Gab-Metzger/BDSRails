<h2>Changer le mot de passe</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group"><%= f.label :password, "Nouveau mot de passe" %><br />
  <%= f.password_field :password, :autofocus => true %></div>

  <div class="form-group"><%= f.label :password_confirmation, "Confirmer nouveau mot de passe" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Changer mon mot de passe", :class=>"btn btn-default" %></div>
<% end %>

<%= render "devise/shared/links" %>
